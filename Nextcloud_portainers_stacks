version: '2'

services:
  db:
    image: mariadb:10.5
    restart: always
    command: --transaction-isolation=READ-COMMITTED --binlog-format=ROW
    volumes:
      - //media/cloud/Nextcloud_Db:/var/lib/mysql
    environment:
      - MYSQL_ROOT_PASSWORD=Mar@2015
      - MYSQL_PASSWORD=Mar@2015
      - MYSQL_DATABASE=nextcloud
      - MYSQL_USER=nextcloud

  app:
    image: nextcloud
    restart: always
    networks:
      MyMacVlan:
        ipv4_address: 192.168.66.8
      default:
    links:
      - db
    volumes:
      - /media/cloud/nextcloud:/var/www/html
    environment:
      - MYSQL_PASSWORD=Mar@2015
      - MYSQL_DATABASE=nextcloud
      - MYSQL_USER=nextcloud
      - MYSQL_HOST=db
networks:
  MyMacVlan:
    external: true    
